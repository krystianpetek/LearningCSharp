<Window
    x:Class="Zadanie_7._03.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Zadanie_7._03"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>

        <DataGrid
            x:Name="gridProdukty"
            Margin="10"
            AlternatingRowBackground="Lavender"
            AutoGenerateColumns="False"
            GridLinesVisibility="None">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Symbol}" Header="Symbol" />
                <DataGridTextColumn Binding="{Binding Nazwa}" Header="Nazwa" />
                <DataGridTextColumn Binding="{Binding LiczbaSztuk}" Header="Liczba sztuk" />
                <DataGridComboBoxColumn
                    x:Name="nazwaMagazynu"
                    Header="Magazyn"
                    SelectedItemBinding="{Binding Magazyn}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>