<Window
    x:Class="AppMVVM_2_WFAiIS.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AppMVVM_2_WFAiIS"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:AppMVVM_2_WFAiIS.ViewModel"
    Title="MainWindow"
    Width="300"
    Height="200"
    mc:Ignorable="d">
    <Window.DataContext>
        <vm:ViewModelApp2 />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Column="1"
            Height="30"
            Text="{Binding Path=Text, Mode=TwoWay}" />
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Height="30"
            Text="{Binding Path=Text, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        <Button
            Grid.Row="2"
            Grid.Column="1"
            Height="40"
            Command="{Binding Reset}"
            Content="CLEAN" />
    </Grid>
</Window>
