@model ProductViewModel;

<partial name="_Validation" />

<h5 class="bg-@Model?.Theme text-white text-center p-2">@Model?.Action</h5>

<form asp-page="@Model?.Action" method="post">
    <div class="form-group">
        <label 
            asp-for="@Model.Product.ProductId"></label>
        <input 
            class="form-control" readonly 
            asp-for="@Model.Product.ProductId" 
            />
    </div>
    <div class="form-group">
        <label 
            asp-for="@Model.Product.Name"
        ></label>
        <div>
            <span 
                asp-validation-for="@Model.Product.Name" 
                class="text-danger"
            ></span>
        </div>
        <input 
            class="form-control" 
            asp-for="@Model.Product.Name" 
            readonly="@Model.ReadOnly" 
            />
    </div>
    <div class="form-group">
        <label 
            asp-for="@Model.Product.Price"
        ></label>
        <div>
            <span 
                class="text-danger"
                asp-validation-for="@Model.Product.Price" 
            ></span>
        </div>
        <input 
            class="form-control" 
            asp-for="@Model.Product.Price" 
            readonly="@Model.ReadOnly" 
            />
    </div>
    <div class="form-group">
        <label 
            asp-for="@Model.Product.CategoryId"
        ></label>
        <div>
            <span 
                asp-validation-for="@Model.Product.CategoryId" 
                class="text-d anger"
            ></span>
        </div>
        <select
            class="form-control" 
            asp-for="@Model.Product.CategoryId"
            asp-items="@(new SelectList(Model.Categories, "CategoryId", "Name"))"
            disabled="@Model.ReadOnly"
            >
            <option 
                value=""
                disabled
                selected
            >Choose a Category</option>
            <option 
                value="-1">
                Create New Category...
            </option>
            </select>
    </div>
    <partial name="_CategoryEditor" for="@Model.Product" />
    <div class="form-group">
        <label 
            asp-for="@Model.Product.SupplierId"
        ></label>
        <div>
            <span 
                class="text-danger"
                asp-validation-for="@Model.Product.SupplierId" 
            ></span>
        </div>
        <select
            class="form-control" 
            asp-for="@Model.Product.SupplierId"
            asp-items="@(new SelectList(Model.Suppliers, "SupplierId", "Name"))"
            disabled="@Model.ReadOnly"
            >
                <option 
                    value=""
                    disabled
                    selected
                >Choose a Supplier</option>
            </select>
    </div>
    @{
        if (Model?.ShowAction == true)
        {
            <button 
                class="btn btn-@Model?.Theme mt-2"
                type="submit"
            >@Model?.Action</button>
        }
        <a
            class="btn btn-secondary mt-2"
            asp-page="Form"
        >Back</a>
    }
</form>
