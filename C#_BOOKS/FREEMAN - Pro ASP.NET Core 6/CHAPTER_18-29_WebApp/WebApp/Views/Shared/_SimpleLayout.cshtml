<!DOCTYPE html>
<html>
    <head>

        <link 
            href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.2.3/css/bootstrap.min.css" 
            asp-fallback-href="/lib/bootstrap/css/bootstrap.min.css"
            asp-fallback-test-class="btn"
            asp-fallback-test-property="display"
            asp-fallback-test-value="inline-block"
            rel="stylesheet" />
        <link 
            asp-href-include="/lib/bootstrap/css/*.min.css"
            asp-href-exclude="**/*-reboot*,**/*-grid*,**/*-utilities*,**/*.rtl.*"
            rel="stylesheet" />
        <link 
            href="/lib/bootstrap/css/bootstrap.min.css" 
            rel="stylesheet" />

        <script 
            src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.min.js"
            asp-fallback-src="/lib/jquery/jquery.min.js"
            asp-fallback-test="window.jQuery">
        </script>
        <script 
            asp-src-include="/lib/jquery/**/*.min.js" 
            asp-src-exclude="**.slim.**"
            asp-append-version="true">
        </script>

    </head>
    <body>
        <div class="m-2">
            <img 
                src="/images/city.jpg" 
                asp-append-version="true" 
                class="m-2 w-50 img-fluid mx-auto d-block rounded-4" />

                <environment names="development">
                    <h2 class="bg-info text-white m-2 p-2">This is Development</h2>
                </environment>
                <environment names="production">
                    <h2 class="bg-danger text-white m-2 p-2">This is Production</h2>
                </environment>

                <h6 class="bg-primary text-white p-2 m-2">
                    Uncached timestamp: @DateTime.Now.ToLongTimeString()
                </h6>
                
                
                <cache 
                    expires-after="@TimeSpan.FromSeconds(15)" 
                    expires-sliding="@TimeSpan.FromSeconds(10)"
                    vary-by-route="action">
                    <h6 class="bg-primary text-white m-2 p-2">
                        Cached timestamp: @DateTime.Now.ToLongTimeString()
                    </h6>
                </cache>
            @RenderBody()
        </div>
    </body>
</html>