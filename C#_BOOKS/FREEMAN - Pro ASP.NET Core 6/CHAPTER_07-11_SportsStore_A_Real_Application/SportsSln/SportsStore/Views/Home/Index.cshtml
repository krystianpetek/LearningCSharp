@model IQueryable<Product>;
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h4>Welcome to SportsStore</h4>

@foreach (var item in Model ?? Enumerable.Empty<Product>())
{
    <div>
        <h3>@item.Name</h3>
        @item.Description
        <h4>@item.Price.ToString("C2")</h4>
    </div>
        
}