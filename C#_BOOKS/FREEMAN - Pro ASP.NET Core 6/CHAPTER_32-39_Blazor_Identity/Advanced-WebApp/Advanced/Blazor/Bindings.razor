<div class="form-group">
    <label>City:</label>
    <input 
        class="form-control"
        value="@City" 
        @onchange="@((e) => UpdateCity(e))"/>
</div>

<div class="form-group mt-2 pt-2">
    @@bind-value | @@bind-value:event="oninput" | City: @City
    <input class="form-control"
    @bind-value="City"
    @bind-value:event="oninput" />
</div>

<div class="p-2 mb-2">
    City Value: @City
</div>

<button 
    class="btn btn-primary" 
    @onclick="@(() => City = "Paris")">
    Paris
</button>

<button
    class="btn btn-primary"
    @onclick="@(() => City = "Chicago")">
    Chicago
</button>

@code {
    public string? City { get; set; } = "London";
    public void UpdateCity(ChangeEventArgs changeEvent)
    {
        City = changeEvent.Value as string;
    }
}
