@model IEnumerable<Product>
@{
    Layout = "_SimpleLayout";
}

<h6 class="bg-secondary text-white text-center m-2 p-2">Products</h6>
<div class="m-2">
    <table class="table table-sm table-striped table-bordered">
        <thead>
                <th>Name</th><th>Price</th>
                <th>Category</th><th>Supplier</th>
            </tr>
        </thead>
        <tbody>
        @{
            foreach (Product p in Model ?? Enumerable.Empty<Product>())
            {
                <partial name="_RowPartialBuildInTagHelpers" model="p" />
            }
        }
        </tbody>
    </table>
    <a asp-page="/lists/suppliers" class="btn btn-secondary">Suppliers</a>
</div>