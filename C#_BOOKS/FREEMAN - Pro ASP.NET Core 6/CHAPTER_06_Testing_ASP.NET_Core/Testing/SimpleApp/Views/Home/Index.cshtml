@using SimpleApp.Models;
@model IEnumerable<Product>?
@{
    Layout = null;
}

<!DOCTYPE>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Simple App</title>
</head>
<body>
<ul>
    @foreach (var item in Model ?? Enumerable.Empty<Product>())
    {
        <li>@($"{nameof(item.Name)}: {item.Name}, {nameof(item.Price)}: {item.Price:C2}")</li>
    }
</ul>
</body>
</html>